<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="question-card">
        <div class="question-card-header">
          <h3>7</h3>
          <div class="p-flex-box">
            <span class="question">
              <%= t('seventh.university_degree.question.name') %>
            </span>
          </div>
        </div>
        <div class="question-content">
          <%= simple_form_for @applicant, :url => answer_seventh_university_degree_path(@applicant), :method => :post do |f| %>
           <%= f.input :university_degree, as: :radio_buttons, label: "" %>
          <div class="button-on-right">
            <%= f.submit t('fifth.residence_status.question.next'), class: "our-small-btn" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
