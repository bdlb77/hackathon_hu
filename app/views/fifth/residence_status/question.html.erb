<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="question-card">
        <div class="question-card-header">
          <h3>5</h3>
          <div class="p-flex-box">
            <span class="question">
              <%= t('fifth.residence_status.question.name') %>
            </span>
          </div>
        </div>
        <div class="question-content">
          <%= simple_form_for @applicant, :url => answer_fifth_residence_status_path(@applicant), :method => :post, :html => {id: "residence_status_form"} do |f| %>
          <%# f.input :residence_status, collection: [t('fifth.residence_status.question.option_1'), t('fifth.residence_status.question.option_2'), t('fifth.residence_status.question.option_3')], label: '', as: :radio_buttons %>
          <div class="form-check picture-input ">
            <input class="form-check-input is-valid radio_buttons optional" type="radio" value="residence permit" name="applicant[residence_status]" id="applicant_residence_status_residence_permit">
            <%= image_tag 'residence permit.png', height: 130 %>
            <label class="collection_radio_buttons" for="applicant_residence_status_residence_permit">Arbeitserlaubnis <br>   <%= t('fifth.residence_status.question.option_1') %></label>
          </div>
          <div class="form-check picture-input">
            <input class="form-check-input is-valid radio_buttons optional" type="radio" value="temporary resident permit" name="applicant[residence_status]" id="applicant_residence_status_temporary_resident_permit">
            <%= image_tag 'temporary.png', height: 130 %>
            <label class="collection_radio_buttons" for="applicant_residence_status_temporary_resident_permit">Gestattung <br> <%= t('fifth.residence_status.question.option_2') %></label>
          </div>
          <div class="form-check picture-input">
            <input class="form-check-input is-valid radio_buttons optional" type="radio" value="tolerated resident permit" name="applicant[residence_status]" id="applicant_residence_status_tolerated_resident_permit">
            <%= image_tag 'tolerated permit.png', height: 130 %>
            <label class="collection_radio_buttons" for="applicant_residence_status_tolerated_resident_permit">Duldung <br> <%= t('fifth.residence_status.question.option_3') %></label>
          </div>
          <div class="button-on-right">
            <%= f.submit t('fifth.residence_status.question.next'), class: "our-small-btn" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function showChecked() {
    let form = document.getElementById("residence_status_form");
    let inputs = document.querySelectorAll(".picture-input");
    // for every click, check if checkbox is checked, then apply style
    form.addEventListener("click", (event) => {
      inputs.forEach(function(input) {
      if(input.firstElementChild.checked) {
        input.classList.add("checkbox-checked")
      }
      else {
        input.classList.remove("checkbox-checked")
      }
      });
    });
  }
  showChecked();
</script>
